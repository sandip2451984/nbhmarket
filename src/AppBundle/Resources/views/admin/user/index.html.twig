{% extends 'adminbase.html.twig' %}

{% block body %}
    <div class="panel panel-default mt-5">
    <div class="panel-heading">
        <h3>Clients</h3>

        {% if is_granted('ROLE_SUPER_ADMIN')%}
        <a href="{{ path('user_new') }}" class="btn btn-primary">Create new</a>
        {% endif %}
    </div>
<div class="table-responsive">
    <table class="table table-striped table-condensed" style="width:100%">
        <thead>
            <tr>
                <th>actions</th>
                <th>Id</th>
                
                <th>Email</th>
                <th>Name</th>
                <th>Surname</th>
                <th>DateOfBirth</th>
                <th>PhoneNumber</th>
                <th>Address</th>
                <th>Country</th>
                <th>TradingAccountNumber</th>
                <th>Balance</th>
                <th>OpenTrades</th>
                <th>CloseTrades</th>
                
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>
                    <a href="{{ path('user_show', {'id': user.id}) }}">show</a>
                    <a href="{{ path('user_edit', {'id': user.id}) }}">edit</a>
                </td>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.name }}</td>
                <td>{{ user.surname }}</td>
                <td>{{ user.dateOfBirth ? user.dateOfBirth|date('Y-m-d') : '' }}</td>
                <td>{{ user.phoneNumber }}</td>
                <td>{{ user.address }}</td>
                <td>{{ user.country }}</td>
                <td>{{ user.tradingAccountNumber }}</td>
                <td>{{ user.balance }}</td>
                <td>{{ user.openTrades }}</td>
                <td>{{ user.closeTrades }}</td>
                
            </tr>
        {% else %}
            <tr>
                <td colspan="15">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>
    </div>

    
{% endblock %}
