{% extends 'base.html.twig' %}

{% block stylesheets %}
<style type="text/css">
body {
  display: -ms-flexbox;
  display: -webkit-box;
  display: flex;
  -ms-flex-align: center;
  -ms-flex-pack: center;
  -webkit-box-align: center;
  align-items: center;
  -webkit-box-pack: center;
  justify-content: center;
  padding-top: 40px;
  padding-bottom: 40px;
  background-color: #f5f5f5;
}
</style>
{% endblock %}
{% block body %}
<form action="{{ path('login') }}" method="post" class="form-signin">
    {% if error %}
        <div class="alert alert-danger" role="alert">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <label for="username" class="text-left">Email:</label>
    <input type="text" id="email" name="email" value="{{ last_username }}" class="form-control" placeholde="Email"/>

    <label for="password" class="text-left">Password:</label>
    <input type="password" id="password" name="_password" class="form-control" placeholde="Password" />
    
    
    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

    <button type="submit" class="btn btn-lg btn-primary btn-block mt-2">login</button>
    New User? <a href="{{path('user_registration')}}">Register here</a>
</form>
{% endblock %}